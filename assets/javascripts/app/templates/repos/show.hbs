<div id="repository" {{bindAttr class="view.class"}}>
  {{#if view.repository.isLoaded}}
    {{#with view.repository}}
      <h3>
        <a {{bindAttr href="view.urlGithub"}}>{{slug}}</a>
      </h3>

      <p class="description">{{description}}</p>

      <ul class="github-stats">
        <li class="language">
          {{lastBuildLanguage}}
        </li>
        <li>
          <a class="watchers" title="Watchers" {{bindAttr href="view.urlGithubWatchers"}}>
            {{stats.watchers}}
          </a>
        </li>
        <li>
          <a class="forks" title="Forks" {{bindAttr href="view.urlGithubNetwork"}}>
            {{stats.forks}}
          </a>
        </li>
      </ul>

      {{view Travis.RepoShowTabsView}}
    {{/with}}

  {{else}}
    <span>Loading</span>
  {{/if}}

  <div class="tab">
    {{outlet pane}}
  </div>
</div>

